{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des catégories
{% endblock %}

{% block description %}Consultez la liste des catégories
{% endblock %}

{# jQuery #}
{% block jQuery %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{# Datatables #}
{% block dataTables %}
<link href="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.js"></script>
<script>
    $(document).ready( function () {
        $('#table').DataTable({
            language: {
        url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json',
    },
        });
    } );
</script>
{% endblock %}

{% block main %}
	<h1 class="text-center my-3 display-5">Liste des catégories</h1>

    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-success alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

	<div class="d-flex justify-content-end align-items-center my-3">
		<a href="{{path('admin_category_create')}}" class="btn btn-primary shadow">
			<i class="fa-solid fa-plus"></i>
			Nouvelle catégorie</a>
	</div>

	<div class="table-responsive">
		<table id="table" class="table table-striped table-hover text-center">
			<thead class="table-dark">
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Slug</th>
					<th>Créé le</th>
					<th>Modifié le</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{category.id}}</td>
						<td>{{category.name}}</td>
						<td>{{category.slug}}</td>
						<td>{{category.createdAt|format_datetime()}}</td>
						<td>{{category.updatedAt|format_datetime()}}</td>
						<td>
							<a href="{{path('admin_category_edit',{'id':category.id})}}" class="text-secondary mx-2" title="Modifier {{category.name}}"><i class="fas fa-edit"></i></a>
							<a onclick="event.preventDefault(); return confirm('Confimez-vous la suppression de cette catégorie?') && document.querySelector('#delete_category_{{category.id}}_form').submit();" href="#" class="text-danger mx-2" title="Supprimer {{category.name}}"><i class="fas fa-trash-alt"></i></a>
                            <form id="delete_category_{{category.id}}_form" method="POST" action="{{path('admin_category_delete',{'id':category.id})}}">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete_category_'~category.id)}}">
                            </form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
